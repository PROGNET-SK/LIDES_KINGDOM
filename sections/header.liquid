<!-- /sections/header.liquid -->

{%- assign logoImageWidth = section.settings.logo_image_width -%}
{%- if section.settings.menu_primary -%}
  {%- assign main_menu_linklist = section.settings['menu_primary-'] %}
{%- else -%}
  {%- assign main_menu_linklist = 'main-menu' -%}
{%- endif -%}

{%- assign header_overlay = false -%}
{%- if section.settings.header_transparent_home and template == 'index' -%}
  {%- assign header_overlay = true -%}
{%- elsif section.settings.header_transparent_collection and template == 'collection' and collection.image -%}
  {%- assign header_overlay = true -%}
{%- endif -%}

<header
  class="site-header header--{{ section.settings.header_style }} header__wrapper{% if header_overlay %} header--transparent{% endif %}"
  id="header"
  data-section-id="{{ section.id }}"
  data-section-type="header"
  data-overlay="{{ header_overlay }}"
>
  {% if logoImageWidth > 0 %}
    <style>
      #logo a img { width: {{ logoImageWidth }}px; }
    </style>
  {% endif %}

  <div class="header__content">
    <div class="wrap">
      {%- # if section.settings.show_header_search -%}
      {%- # include 'search' -%}
      {%- # endif -%}

      <!-- SEARCH, CURRENCY, ACCOUNT, CART -->
      <div class="header-content">
        <!--
          -
          {% # if section.settings.show_header_social %}

            <nav class="header__social">
              {% # include 'social' %}
            </nav>
          {% # endif %}
        -->

        <!-- LOGO -->
        <h1 class="logo__wrapper" id="logo" data-aos="fade-down" data-aos-duration="1000" data-aos-delay="300">
          <a href="/">
            {% if section.settings.logo_image %}
              {%- assign image = section.settings.logo_image -%}
              {%- assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              {%- assign image_height = section.settings.logo_image_width
                | divided_by: image.aspect_ratio
                | round
                | append: 'px'
              -%}
              <img
                class="lazyload logo logo--default"
                src="{{ image | img_url: '400x' }}"
                data-src="{{ img_url }}"
                data-widths="[180, 360, 540, 720, 900, 1080, 1296]"
                data-aspectratio="{{ image.aspect_ratio }}"
                data-sizes="auto"
                data-parent-fit="contain"
                style="height: {{ image_height }}"
                alt="{{ shop.name | escape }}"
              >

              <noscript>
                <img class="no-js-image" src="{{ image | img_url: '400x' }}" alt="{{ shop.name | escape }}">
              </noscript>
              {% if header_overlay and section.settings.transparent_logo != blank %}
                {% capture image_size %}{{ section.settings.logo_image_width }}x{% endcapture %}
                <img
                  src="{{ section.settings.transparent_logo | img_url: image_size }}"
                  class="logo logo--transparent"
                  srcset="{{ section.settings.transparent_logo | img_url: image_size }} 1x, {{ section.settings.transparent_logo | img_url: image_size, scale: 2 }} 2x"
                  style="height: {{ image_height }}"
                  alt="{{ section.settings.transparent_logo.alt | default: shop.name }}"
                >
              {% endif %}
            {% else %}
              <span>{{ shop.name | escape }}</span>
            {% endif %}
          </a>
        </h1>

        <div class="user-links">
          {% if shop.customer_accounts_enabled and section.settings.show_account %}
            <a href="/account" class="header__account__link" id="account-link">
              {% include 'icon-account' %}
              <span class="visually-hidden">{{ 'customer.account.title' | t }}</span>
            </a>
          {% endif %}
          {% if section.settings.show_header_search %}
            <a href="javascript:void(0)" id="SearchToggle" title="{{ 'general.search.placeholder' | t }}">
              <span class="search-toggle">
                <span class="visually-hidden">{{ 'general.search.submit' | t }}</span>
                <span class="oi" data-glyph="magnifying-glass"></span>
              </span>
            </a>
          {% endif %}
          <a href="/cart/" class="header__cart__wrapper" id="CartButton" title="{{ 'cart.general.title' | t }}">
            <span class="header__cart__icon__wrapper">
              <span class="visually-hidden">{{ 'layout.cart.title' | t }}</span>
              <span class="oi header__cart__icon" data-glyph="cart"></span>
              <span
                class="cart-count-js header__cart__count"
                {% if cart.item_count == 0 %}
                  style="display: none;"
                {% endif %}
              >
                {{ cart.item_count }}
              </span>
            </span>
          </a>
        </div>
      </div>
    </div>
    <!-- top header menu -->
    <section id="header-menu" class="navigation__wrapper" role="navigation">
      <nav class="site-nav nav__links">
        <ul class="main-menu unstyled" role="navigation" aria-label="primary">
          <!-- <li class="transcy-switcher-manual hidden transcy-mobile mobile-nav__item"></li> -->
          {% for link in linklists['header-top-nav'].links %}
            <li>
              <a
                href="{{ link.url }}"
                title="{{ link.title }}"

                {% if link.active %}
                  class="selected"
                {% endif %}
              >
                {{- link.title -}}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    </section>
  </div>

  <div class="header__responsive-handles">
    <!--
      <span class="header__search-handle" tabindex="0">
        <span class="icon icon-search" aria-hidden="true">{%- render 'theme-symbols', icon: 'search' -%}</span>
      </span>
    -->
    <a href="{{ routes.cart_url }}" class="header__cart-handle" title="{{ 'cart.title' | t }}">
      <span class="visually-hidden">{{ 'cart.title' | t }}</span>
      <span class="icon icon-cart" aria-hidden="true" style="height: 28px;">
        {%- render 'theme-symbols', icon: 'cart' -%}
      </span>
      <span class="count" aria-hidden="true" data-header-cart-count>{{ cart.item_count }}</span>
    </a>

    <div class="sidebar__responsive-handles">
      <span class="sidebar__search-handle" tabindex="0">
        <span class="icon icon-search" aria-hidden="true">
          <svg class="svg symbol symbol--search" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M10.2 19.2a8.96 8.96 0 0 1-9-9 8.96 8.96 0 0 1 9-9 8.96 8.96 0 0 1 9 9 8.96 8.96 0 0 1-9 9zm0-16c-3.9 0-7 3.1-7 7s3.1 7 7 7 7-3.1 7-7c0-3.8-3.1-7-7-7z"></path><path d="M15.65 17.11l1.414-1.414 5.657 5.657-1.414 1.414z"></path>
          </svg>
        </span> </span
      ><a href="/cart" class="sidebar__cart-handle" title="Nákupný košík">
        <span class="visually-hidden">Nákupný košík</span>
        <span class="icon icon-cart" aria-hidden="true" style="height: 28px;">
          <svg
            class="svg symbol symbol--cart low-dpi"
            width="24"
            height="28"
            viewBox="0 0 24 28"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M7 7H4.85375C3.25513 7 1.93732 8.25356 1.85749 9.85019L1.15749 23.8502C1.07181 25.5637 2.43806 27 4.15375 27H19.8463C21.5619 27 22.9282 25.5637 22.8425 23.8502L22.1425 9.85019C22.0627 8.25356 20.7449 7 19.1463 7H17M7 7V5C7 2.79086 8.79086 1 11 1H13C15.2091 1 17 2.79086 17 5V7M7 7H17" stroke="black" stroke-width="2"></path>
          </svg>
          <svg
            class="svg symbol symbol--cart high-dpi"
            width="24"
            height="28"
            viewBox="0 0 24 28"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M7.20513 7.11364H4.96283C3.37199 7.11364 2.05776 8.35543 1.96765 9.94371L1.17984 23.8301C1.08221 25.551 2.45138 27 4.17502 27H19.825C21.5486 27 22.9178 25.551 22.8202 23.8301L22.0324 9.94371C21.9422 8.35542 20.628 7.11364 19.0372 7.11364H16.7949M7.20513 7.11364V5C7.20513 2.79086 8.99599 1 11.2051 1H12.7949C15.004 1 16.7949 2.79086 16.7949 5V7.11364M7.20513 7.11364H16.7949" stroke="black" stroke-width="1.5"></path>
          </svg>
        </span>
        <span class="count" aria-hidden="true" data-header-cart-count="">0</span>
      </a>

      <span class="sidebar__menu-handle" tabindex="0">
        <span class="icon icon-menu" aria-hidden="true">
          <svg
            class="svg symbol symbol--burger"
            width="24"
            height="28"
            viewBox="0 0 24 28"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M0 5H24V7H0V5Z" fill="black"></path><path d="M0 13H24V14V15H0C0 14.7071 0 14.2286 0 14C0 13.7714 0 13.2929 0 13Z" fill="black"></path><path d="M0 21H24V23H0V21Z" fill="black"></path>
          </svg>
        </span>
      </span>
    </div>
  </div>

  <div class="custom-serach">
    <!--
      <search-form>
        {%- # render 'search-form' -%}
        <span class="sidebar__search-close sidebar-close-element" data-js-close tabindex="0">
          <span class="visually-hidden">{{ 'general.accessibility_labels.close' | t }}</span>
          <span aria-hidden="true">{%- render 'theme-symbols', icon: 'close' -%}</span>
        </span>
        <div class="sidebar__search-container" data-js-search-results data-js-search-results-holder></div>
      </search-form>
    -->
  </div>

  <!-- END header -->
</header>

{% if template.name == 'index' %}
  {% assign potential_action_target = shop.url | append: '/search?q={search_term_string}' %}
{% endif %}

