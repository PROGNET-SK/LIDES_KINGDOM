<form action="{{ routes.search_url }}" method="get" class="notranslate input-group search-form" role="search" autocomplete="off">
  {%- unless search_placeholder != blank -%}
    {%- capture search_placeholder -%}Vyhľadávanie{%- endcapture -%}
  {%- endunless -%}

  <input
    type="search"
    name="q"
    value="{{ search.terms | escape }}"
    placeholder="{{ search_placeholder }}"
    data-responsive-placeholder="Vyhľadávanie"
    class="notranslate input-group-field search-field"   
    aria-label="Vyhľadávanie"
    autocomplete="off"
    data-js-search-input
  >
  {%- unless search_label -%}
    <button type="submit" class="btn icon-fallback-text" aria-label="{{ 'search.form.submit' | t }}">
      <span class="icon icon-search" aria-hidden="true">
        {%- render 'theme-symbols', icon: 'search' -%}
      </span>
    </button>
  {%- else -%}
    <button type="submit" class="button button--solid">{{ search_label }}</button>
  {%- endunless -%}
</form>
