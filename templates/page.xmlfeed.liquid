{% layout none %}
<?xml version="1.0" encoding="UTF-8" ?>
<rss xmlns:g="http://base.google.com/ns/1.0" version="2.0">
  <channel>

<products>
{% for product in collections.all.products %}
<product>
<id>{{ product.id }}</id>
<title>{{ product.title | xml_escape }}</title>
<description>{{ product.description | xml_escape }}</description>
<price>{{ product.price | xml_escape }}</price>
{% for image in product.images %}
<image>{{ image.src | xml_escape }}</image>
{% endfor %}
<url>{{ shop.url | append: product.url | xml_escape }}</url>
</product>
{% endfor %}
</products>
  </channel>
</rss>