{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "<p>{{ product.vendor }}<\/p>",
            "text_style": "subtitle"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "show_variant_labels": true,
            "show_quantities": "no"
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_quantity_selector": true
          }
        },
        "pickup_avaiability": {
          "type": "pickup_avaiability",
          "settings": {
          }
        },
        "description": {
          "type": "description",
          "settings": {
            "product_description_truncated": "truncated--disabled"
          }
        },
        "share": {
          "type": "share",
          "settings": {
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "price",
        "variant_picker",
        "buy_buttons",
        "pickup_avaiability",
        "description",
        "share"
      ],
      "settings": {
        "gallery_style": "slider",
        "gallery_slider_style": true,
        "gallery_pagination": "thumbnails",
        "gallery_gutter": true,
        "enable_zoom": true,
        "enable_video_looping": false
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "You may also like"
      }
    }
  },
  "order": [
    "main",
    "product-recommendations"
  ]
